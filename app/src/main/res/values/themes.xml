        &lt;!&ndash; Secondary brand color. &ndash;&gt;
        <item name="colorSecondary">@color/red_0</item>
        <item name="colorSecondaryVariant">@color/red_1</item>
        <item name="colorOnSecondary">@color/black</item>-->
        <item name="android:windowAnimationStyle">@style/WindowTransitionAnim</item>
